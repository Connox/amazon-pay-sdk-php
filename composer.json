{
    "name": "connox/amazon-pay-sdk-php",
    "type": "library",
    "description": "Amazon Pay SDK (PHP)",
    "version": "4.0.0",
    "keywords": [
        "amazon",
        "pay",
        "payment",
        "payments",
        "pay with amazon",
        "amazon payments",
        "amazon pay"
    ],
    "homepage": "https://github.com/amzn/amazon-pay-sdk-php",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Amazon Pay SDK",
            "email": "amazon-pay-sdk@amazon.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "AmazonPay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AmazonPay\\": "tests/"
        }
    },
    "require": {
        "php": "8.0.* || 8.1.*",
        "ext-curl": "*",
        "psr/log": "^2.0 || ^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.23"
    },
    "scripts": {
        "test:unit": "phpunit --no-coverage",
        "test:coverage": "phpunit --coverage-text",
        "test:psalm": "psalm -c psalm.xml",
        "lint:cs": "php-cs-fixer --ansi fix --dry-run --allow-risky=yes -v",
        "lint:cs-fix": "php-cs-fixer --ansi fix --allow-risky=yes -v"
    }
}
